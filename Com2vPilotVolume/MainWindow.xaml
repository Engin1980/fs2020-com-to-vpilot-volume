<Window x:Class="Com2vPilotVolume.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Com2vPilotVolume"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
  <DockPanel>
    <Button DockPanel.Dock="Top" Content="Refresh" x:Name="btnRefresh" Click="btnRefresh_Click" />
    <ListView  ItemsSource="{Binding Apps}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <Label Content="{Binding ProcessId}" Width="50" />
            <Label Content="{Binding Name}" Width="200" />
            <Label Content="{Binding Volume}" Width="50" />
            <Slider Value="{Binding Volume}" Minimum="0" Maximum="1" Width="200" />
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </DockPanel>
</Window>
